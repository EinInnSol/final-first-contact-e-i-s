# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/firstcontact_eis
POSTGRES_USER=firstcontact
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=firstcontact_eis
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_SERVICE_TIMEOUT=30
AI_MAX_RETRIES=3

# Demo Mode (set to true for demonstrations without API keys)
DEMO_MODE=true
MOCK_AI_RESPONSES=true

# Application Configuration
APP_NAME=First Contact EIS
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15555551234

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Compliance Configuration
HUD_REPORTING_ENABLED=true
HMIS_EXPORT_ENABLED=true
CES_INTEGRATION_ENABLED=true

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# External Service URLs
CITY_API_BASE_URL=https://api.longbeach.gov
HUD_API_BASE_URL=https://api.hud.gov
CES_API_BASE_URL=https://api.ces.gov

# Feature Flags
ENABLE_AI_TRIAGE=true
ENABLE_CRISIS_DETECTION=true
ENABLE_COMPLIANCE_AUTOMATION=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_ASSISTANCE=true

# Performance Configuration
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Development Configuration
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DEMO_DATA=true
